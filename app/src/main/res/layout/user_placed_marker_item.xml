<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    android:background="@color/black">

    <RelativeLayout
        android:id="@+id/playlist_song_item"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:background="@color/white">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="24dp"
            android:layout_marginRight="24dp"
            tools:srcCompat="@mipmap/spotfoxxicon" />

        <TextView
            android:id="@+id/tv_playlist_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="75dp"
            android:layout_marginEnd="66dp"
            android:layout_marginTop="10dp"
            android:contentDescription="@string/Content_description_user_name"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:ellipsize="end"
            android:maxLines="1"/>/>

        <TextView
            android:id="@+id/tv_like_dislike_ratio"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_marginStart="75dp"
            android:layout_marginEnd="66dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp"
            android:contentDescription="@string/Content_description_Author_Title"
            android:ellipsize="end"
            android:maxLines="1"
            android:textSize="14sp"/>


        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/btn_delete_marker"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/ic_delete_black"
            android:contentDescription="@string/Content_description_favourite" />

    </RelativeLayout>

</LinearLayout>